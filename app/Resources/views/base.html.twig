<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Project Blog{% endblock %}</title>
        
        {% block stylesheets %}
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        {% endblock %}

    </head>
    <body>          
            <div class="pull-right">
                {% if app.user %}
                    <span>Zalogowany jako <b>{{ app.user }}</b>
                        {% if is_granted('ROLE_ADMIN') %}
                        ][<a href="{{ path('admin') }}">Panel administracyjny</a>][
                        {% endif %}
                        <a href="{{ path('fos_user_security_logout') }}">Wyloguj się</a>
                    </span>
                    
                {% else %}
                    <span>Nie jesteś zalogowany, 
                        <a href="{{ path('fos_user_security_login') }}">Zaloguj się</a>
                    </span>
                {% endif %}

            </div>   
            {% block body %}

            {% block navigation %}{% endblock %}
                

            {% endblock %}
            {% block javascripts %}{% endblock %}
    </body>
</html>
